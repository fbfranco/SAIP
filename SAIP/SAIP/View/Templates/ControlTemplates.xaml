<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ViewModels="clr-namespace:SAIP.ViewModel"
                    xmlns:local="clr-namespace:SAIP.View.Templates">


    <!--Button Sucursal Activa-->
    <DataTemplate x:Key="Button_SucursalActiva">
        <StackPanel>
            <Button Height="140" 
                    Width="140"
                    Margin="5"
                    Background="{StaticResource WordBlueBrush}"
                    BorderBrush="{StaticResource BorderWordBlueBrush}">
                <StackPanel>
                    <Image Width="40" Source="pack://application:,,,/Resource/Images/Background/grafico.png"/>
                    <TextBlock Name="textBtnSucursal" Text="{Binding Nombre}" Margin="0 10 0 0" Foreground="White" FontFamily="Roboto" FontSize="16" TextWrapping="Wrap" TextAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </DataTemplate>
    
</ResourceDictionary>